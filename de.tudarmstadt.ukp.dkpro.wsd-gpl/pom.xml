  			</artifactId>
				<version>1.3.0-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>de.tudarmstadt.ukp.dkpro.wsd</groupId>
				<artifactId>
  				de.tudarmstadt.ukp.dkpro.wsd.si.germanet-gpl
  			</artifactId>
